<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ARS_Studio">
    
    <!-- Gradiente orizzontale tema principale -->
    <LinearGradientBrush x:Key="BlueLinearGradient" EndPoint="1,0" StartPoint="0,0">
        <GradientStop Color="#FF3C00FF" Offset="0"/>
        <GradientStop Color="#FF48FFFF" Offset="1"/>
    </LinearGradientBrush>

    <!-- I colori delle facce -->
    <SolidColorBrush x:Key="ColorCubeEmpty"     Color="#4CEBEBEB"/>
    <SolidColorBrush x:Key="ColorCubeBianco"    Color="#FFEBEBEB"/>
    <SolidColorBrush x:Key="ColorCubeGiallo"    Color="#FFFFEB3B"/>
    <SolidColorBrush x:Key="ColorCubeBlu"       Color="#FF3F51B5"/>
    <SolidColorBrush x:Key="ColorCubeVerde"     Color="#FF4CAF50"/>
    <SolidColorBrush x:Key="ColorCubeRosso"     Color="#FFF44336"/>
    <SolidColorBrush x:Key="ColorCubeArancione" Color="#FFFF9800"/>

    <SolidColorBrush x:Key="ColorBlack"         Color="#FF161B22"/>
    <SolidColorBrush x:Key="ColorWhite"         Color="#FFEBEBEB"/>
</ResourceDictionary>